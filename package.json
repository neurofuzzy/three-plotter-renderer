{
  "name": "three-plotter-renderer",
  "version": "0.0.2",
  "description": "An SVG renderer for Three.js with hidden line removal - designed for pen plotters and laser cutters",
  "type": "module",
  "main": "dist/three-plotter-renderer.umd.js",
  "module": "dist/three-plotter-renderer.es.js",
  "exports": {
    ".": {
      "import": "./dist/three-plotter-renderer.es.js",
      "require": "./dist/three-plotter-renderer.umd.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "sideEffects": false,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neurofuzzy/three-plotter-renderer.git"
  },
  "keywords": [
    "svg",
    "plotter",
    "pen-plotter",
    "laser-cutter",
    "renderer",
    "three.js",
    "threejs",
    "hidden-line-removal",
    "occlusion",
    "vector",
    "graphics",
    "clipper"
  ],
  "author": "Geoff Gaudreault",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/neurofuzzy/three-plotter-renderer/issues"
  },
  "homepage": "https://github.com/neurofuzzy/three-plotter-renderer#readme",
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "three": "^0.160.0"
  },
  "peerDependencies": {
    "three": ">=0.120.0"
  }
}